container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python kingofthecob/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python kingofthecob/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python kingofthecob/manage.py collectstatic --noinput"


option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "kingofthecob.settings"
    "PYTHONPATH": "/opt/python/current/app/kingofthecob:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: kingofthecob/kingofthecobapp/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"
